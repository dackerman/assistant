{
  "$schema": "https://biomejs.dev/schemas/2.2.4/schema.json",
  "files": {
    "includes": [
      "**",
      "!**/*.md",
      "!**/*.mmd",
      "!**/*.sql",
      "!**/dist",
      "!**/dist",
      "!**/tsconfig*.json"
    ]
  },
  "assist": { "actions": { "source": { "organizeImports": "on" } } },
  "linter": {
    "enabled": true,
    "rules": {
      "a11y": "off",
      "complexity": "off",
      "nursery": "off",
      "performance": "off",
      "security": "off",
      "style": "off",
      "correctness": {
        "recommended": true
      },
      "suspicious": {
        "recommended": true,
        "noArrayIndexKey": "off",
        "noUnknownAtRules": "off"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "javascript": {
    "formatter": {
      "semicolons": "asNeeded",
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "bracketSpacing": true,
      "arrowParentheses": "asNeeded"
    }
  },
  "vcs": {
    "enabled": true,
    "clientKind": "git",
    "useIgnoreFile": true
  }
}
